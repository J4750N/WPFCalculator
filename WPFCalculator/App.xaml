<Application x:Class="WPFCalculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFCalculator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="Button">
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}" x:Key="Operations">

            <Setter Property="Background" Value="#ffa500"/>
            <Setter Property="Foreground" Value="White"/>

        </Style>
        
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}" x:Key="Numbers">

            <Setter Property="Background" Value="#444444"/>
            <Setter Property="Foreground" Value="White"/>

        </Style>

        <Style TargetType="Label" x:Key="Result">

            <Setter Property="FontSize" Value="70"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Bottom"/>
            
        </Style>

    </Application.Resources>
</Application>
